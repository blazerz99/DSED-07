@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Welcome, @ViewBag.UserNew.FirstName @ViewBag.UserNew.LastName</h1>
    <h1>TO ADOPT AN ANIMAL</h1>
</div>

<div class="row">
    @foreach (var item in (IEnumerable<string>)ViewData["Conditions"])
    {
        if (item.ToString().Contains("Heading")) // makes anything with the word heading in a line in the txt file into h3
        {
            <div class="form-group col-md-12">
                <h3>@item.ToString().Replace("Heading", "");</h3>
            </div>
        }


        else
        {
            <div class="form-group col-md-3 text-left">@item.ToString()</div>
        }


    }
</div>
